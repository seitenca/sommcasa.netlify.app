---
import { Icon } from 'astro-icon'
import { SiteMetadata, Logo } from '../config'
import SVGImg from '../components/svgimg.astro'
---

<div class="h-24 lg:h-16"></div>
<footer class="text-gray-600 dark:text-gray-400">
  <div
    class="z-20 bottom-0 inset-x-0 px-4 lg:px-8 py-1 lg:py-4 w-full flex items-center lg:flex-row flex-col"
  >
    <span class="flex-none flex flex-row items-center">
      <a
        class="flex title-font font-medium items-center lg:justify-start justify-center text-gray-900 dark:text:gray-100"
        href={import.meta.env.BASE_URL}
      >
        <SVGImg src={Logo} alt="Footer Logo" class="h-6 w-6" />
        <span class="sr-only">Logo</span>
      </a>
      <p
        class="text-sm text-gray-600 dark:text-gray-300 ml-2 pl-2 border-l-2 border-purple-300 dark:border-white py-1"
      >
        © {new Date().getFullYear()} Sommcasa by
        <a
          href="https://www.sccomunicacio.com/"
          class="ml-1 text-purple-600 hover:text-pink-600 dark:text-white-300 dark:hover:text-pink-300"
          rel="noopener noreferrer"
          target="_blank"
        >
          SC Comunicació
        </a>
      </p>
    </span>

    <span
      class="grow inline-flex lg:ml-auto justify-center lg:justify-end mt-2 lg:mt-0"
    >
      {
        SiteMetadata.social.map(s =>
          s.link ? (
            <a
              href={s.link}
              class="ml-3 text-purple-600 hover:text-pink-600 dark:text-white-300 dark:hover:text-pink-300"
              rel="noopener noreferrer"
              target="_blank"
            >
              <Icon pack="bi" name={s.icon} class=" h-5 w-5" />
              <span class="sr-only">{s.name}</span>
            </a>
          ) : (
            ''
          )
        )
      }
    </span>
  </div>
</footer>
